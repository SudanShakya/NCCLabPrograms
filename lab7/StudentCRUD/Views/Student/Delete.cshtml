@model Student
@{
}
<h1>Delete Student</h1>
<hr/>
<form method="post">
    <div class="border p-3 mt-4">
      <div class="mb-3">
          <input type="hidden" asp-for = "ID"/>
        <label for="" class="form-label">Full Name</label>
        <input disabled type="text" class="form-control"  asp-for="FullName"/>
        <span asp-validation-for="FullName" class="text-danger"></span>
      </div>
       <div class="mb-3">
        <label for="" class="form-label">Semester</label>
        <input disabled type="text" class="form-control"  asp-for="semester"/>
        <span asp-validation-for="semester" class="text-danger"></span>
      </div>
      <div class="mb-3">
        <label for="" class="form-label">Address</label>
        <input disabled type="text" class="form-control"  asp-for="Address"/>
      </div>
      <button type="submit" class="btn btn-danger">Delete</button>
    </div>
    <a class="btn btn-primary mt-2 p-2" asp-action="Index" asp-controller="Student">Back To List</a>
</form>

@section scripts{
    @{
        <partial name = "_ValidationScriptsPartial"/>
    }
        }